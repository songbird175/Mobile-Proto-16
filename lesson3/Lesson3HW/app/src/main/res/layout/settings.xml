<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="celina.lesson3hw.SettingsFragment"
    android:id="@+id/layout"
    android:orientation="vertical">

    <!-- I'm getting warnings that say layout_below is invalid for LinearLayouts. Look into other
    layouts!-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/pinkButton"
        android:backgroundTint="@color/pink"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pinkButton"
        android:layout_gravity="center_horizontal"
        android:id="@+id/mintButton"
        android:backgroundTint="@color/mint"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mintButton"
        android:layout_gravity="center_horizontal"
        android:id="@+id/lavButton"
        android:backgroundTint="@color/lavender"/>

</LinearLayout>